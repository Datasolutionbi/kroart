generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model ArtPiece {
  id          String   @id @default(cuid())
  title       String
  description String
  imageUrl    String?
  technique   String
  year        Int
  isExhibited Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id    String @id @default(uuid())
  email String @unique
  name  String?
}
